# 数据库配置
DATABASE_URI=sqlite:///app.db

# Flask配置
SECRET_KEY=your-secret-key-here
DEBUG=True

# 文件上传配置
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Solana区块链配置
SOLANA_NETWORK_URL=https://api.mainnet-beta.solana.com
# 使用私钥或助记词二选一即可
SOLANA_SERVICE_WALLET_PRIVATE_KEY=your-private-key-here
# 或者使用助记词（12或24个英文单词，空格分隔）
SOLANA_SERVICE_WALLET_MNEMONIC=glory issue enough dragon erode robot buyer fork inside dinosaur tomato alert
SOLANA_BALANCE_THRESHOLD=0.1

# 支付配置
MIN_PAYMENT_AMOUNT=100  # 最低支付金额 (USDC) 